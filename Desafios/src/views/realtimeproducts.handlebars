<div class="bg-light">
  <h2 class="text-center bg-info shadow-lg p-3 mb-5 bg-body rounded">
    Realtime Products
  </h2>
  <form id="formProduct" class="form-group d-flex-column">
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="text" name="title" id="title" placeholder="title" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input
        type="text"
        name="description"
        id="description"
        placeholder="description"
      />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="number" name="price" id="price" placeholder="price" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input
        type="text"
        name="thumbnail"
        id="thumbnail"
        placeholder="thumbnail"
      />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="number" name="code" id="code" placeholder="code" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="number" name="stock" id="stock" placeholder="stock" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="text" name="status" id="status" placeholder="status" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input type="text" name="category" id="category" placeholder="category" />
    </div>
    <div class="d-flex justify-content-center align-items-center mb-2">
      <input class="btn btn-primary" type="submit" value="enviar" />
    </div>
  </form>
  <ul id="productLive" class="bg-light">
  </ul>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/{{script}}"></script>