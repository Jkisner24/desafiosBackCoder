<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light .show" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0 d-flex justify-content-between" style="min-width: 1440px;">
                {{#if logged}}
                <li class="nav-item active">
                    <a class="nav-link text-left" href="/api/views/session/login">Iniciar sesión</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-left" href="/api/views/session/register">Registrarse</a>
                </li>
                {{else}}
                <li class="nav-item active">
                    <div class="user-info d-flex align-items-center">
                        <span class="navbar-brand">
                            <p class="fs-1 text-info">Usuario: {{first_name}} {{last_name}}<br>Tu rol es: {{role}}</p>
                        </span>
                    </div>
                </li>
                <div class="ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-right" href="/api/views/session/profile">
                            <button class="btn btn-outline-info my-2 my-sm-0">Profile</button>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-right" href="/api/views/carts/{{cartId}}">
                            <button class="btn btn-outline-info my-2 my-sm-0">Cart</button>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <form class="nav-link text-right" action="/api/views/session/logout" method="post">
                            <button class="btn btn-outline-info my-2 my-sm-0">Cerrar sesión</button>
                        </form>
                    </li>
                </div>
                {{/if}}
            </ul>
        </div>
    </nav>
</header>

<hr>

<main class="mb-4">
<table class="table table-light">
  {{#if emptyCart}}
  <h1 class="text-center">Empty Cart</h1>
  <a class="mb-12" href="/api/views/products"><button class="btn btn-success mt-4 d-grid gap-2 col-6 mx-auto">Go to products</button></a>
  {{else}}
  {{#each products}}
  <thead>
    <tr class="">
      <th scope="col">Title</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
    <tr>
      <td class="align-middle">{{product.title}}</td>
      <td class="align-middle">{{quantity}}</td>
      <td class="align-middle">{{product.price}}</td>
      <td><img class="rounded mx-auto d-block" style="width: 8rem; height:auto" src={{product.thumbnail}}></img></td>
    </tr>
  {{/each}}
</table>  
      <p>Total de compra: {{total}}</p>
      <button class="btn btn-success" id="buy" value= "{{cartId}}">Comprar</button>
  {{/if}}
</main>
<hr>
<footer class="container w-100 mt-2">
      <p>© Company E-commerce Coder</p>
</footer>
<script src="/static/js/purchase.js"></script>

